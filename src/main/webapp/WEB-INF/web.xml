<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		 version="3.1">
	<servlet>
		<servlet-name>participants</servlet-name>
		<servlet-class>ua.kiev.prog.chatserver.servlet.ParticipantServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>participants</servlet-name>
		<url-pattern>/participants</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>messages</servlet-name>
		<servlet-class>ua.kiev.prog.chatserver.servlet.MessagesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>messages</servlet-name>
		<url-pattern>/messages</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>chats</servlet-name>
		<servlet-class>ua.kiev.prog.chatserver.servlet.ChatsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>chats</servlet-name>
		<url-pattern>/chats</url-pattern>
	</servlet-mapping>
</web-app>

